<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pastelaria.Web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/iziToast/css/iziToast.min.css">
    <link rel="stylesheet" href="~/Pastelaria.Web.styles.css" asp-append-version="true" />
</head>
<body>
    
    <header>
        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        <a asp-area="" asp-controller="Usuario" asp-action="Index">Usuários</a>
        <a asp-area="" asp-controller="Tarefa" asp-action="Index">Tarefas</a>
    </header>
    <div>
        @RenderBody()
    </div>

    <script src="~/lib/iziToast/js/iziToast.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Pages/Usuario.js"></script>
    <script>
        site.init();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
